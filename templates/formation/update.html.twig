{% extends 'base.html.twig' %}

{% block content %}
<style>
  h3{
    text-align:center;
    color:blue;
  }
  button{
    margin-top: 30px
  }
</style>  
<div class="container">
  <div class="row">
    <h3 class="mt-5 mb-5">Modifier Une Formation</h3>
    <div class="col-md-6 offset-md-3">
        {{ form_start(form) }}
        <input class="form-control id" disabled value="{{ FormationId }}"></input>
        <div class="form-group">
            {{ form_label(form.Nom) }}
            {{ form_widget(form.Nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.Duree) }}
            {{ form_widget(form.Duree, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.ecole) }}
            {{ form_widget(form.ecole, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">Modifier</button>
        </div>
        {{ form_end(form) }}
    </div>
  </div>  
</div>  
{% endblock %}
